<%= form_with(model: @tool, local: true) do |form| %>

  <% if @tool.errors.any? %>
    <div class="error-message">
      <%= @tool.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <div>

    <div class="relative my-6">
      <%= form.text_field :name, class: "text-field peer", placeholder: "Name", disabled: read_only %>
      <%= form.label :name, class: 'text-field-label' %>
    </div>
    <div class="relative my-6">
      <%= form.text_field :description, class: "text-field peer", placeholder: "Description", disabled: read_only %>
      <%= form.label :description, class: 'text-field-label' %>
    </div>
  </div>

  <div class="mb-10">
    <%= render 'users/users_read_only', users: @tool.users %>
  </div>

  <div class="mb-10">
    <%= render 'users/users_read_only', users: @unassigned_users %>
  </div>

  <%= render "shared/dropdown" %>
  <% if read_only == false %>
    <%= form.submit value: @is_create ? 'Create Tool' : 'Update Tool', class: "btn-primary-lg" %>
    <%= link_to sanitize("Cancel"), tools_path, class: "btn-secondary-lg" %>
  <% end %>


<% end %>