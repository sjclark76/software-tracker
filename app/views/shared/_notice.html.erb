<% if flash[:notice] %>

  <!-- Component: Basic text secondary notification with close button -->
  <div x-data="{ open: true }"
       x-show="open"
       x-transition.duration.500ms
       x-ref="parent"
       x-init="setTimeout(() => { open = false }, 3000)"
       class="relative flex items-center max-w-full gap-4 px-4 py-3 overflow-hidden text-sm rounded shadow-lg w-80 bg-emerald-50 text-emerald-500 shadow-emerald-100 ring-1 ring-inset ring-emerald-100 mb-10 " role="status">
    <!-- Text -->
    <%= render 'shared/success_svg' %>
    <p class="flex-1"><%= flash[:notice] %></p>
    <!-- Close button -->
    <button @click="open = false"  aria-label="Close" class="inline-flex items-center justify-center h-8 gap-2 px-4 text-xs font-medium tracking-wide transition duration-300 rounded-full justify-self-center whitespace-nowrap text-emerald-500 hover:bg-emerald-100 focus:bg-emerald-200 hover:text-emerald-600 focus:text-emerald-700focus-visible:outline-none disabled:cursor-not-allowed disabled:text-emerald-600 disabled:shadow-none disabled:hover:bg-transparent">
    <span class="relative only:-mx-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" role="graphics-symbol" aria-labelledby="title-20 desc-20">
        <title id="title-20">Close Notification</title>
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </span>
    </button>
  </div>
  <!-- End Basic text secondary notification with close button -->

<% end %>

